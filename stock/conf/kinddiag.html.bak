    <script type="text/javascript" src="conf.js"></script>
</head>
<body>
    <div id="divkind">
        <div class="list-title">
            <h4>种类选择</h4>
        </div>
        <div id="divmain">
            <div id="divleft">
                <div id="divselect">
                    <p><span>股票代码</span><input type="text" name="stockcode" id="stockcode" style="width:130px"></p><br />
                    <p>
