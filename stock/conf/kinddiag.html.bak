                            <option value="1">5pointweekline</option>
                            <option value="2">leader</option>
                            <option value="3">buypoint1</option>
                            <option value="4">buypoint2</option>
                            <option value="5">buypoint3</option>
                            <option value="6">salepoint1</option>
                        </select>
                    </p><br />
